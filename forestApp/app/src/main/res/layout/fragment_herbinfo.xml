<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.beautifourest.forestapp.ui.herbInfo.HerbInfoViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:text="@{model.name}"
                />

            <ImageView
                android:id="@+id/plantimg"
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:imageURL="@{model.img}" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/ename"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:text="원산지" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.country}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/lifetime"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="내용" />

                <TextView
                    android:maxLines = "3"
                    android:isScrollContainer="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.herbInt}" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/season"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="외용" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.herbExt}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/gbn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="관리법" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.herbmng}" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/classname"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="주의사항" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.herbcaution}" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</layout>

