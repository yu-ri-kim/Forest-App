    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_booksearch_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <EditText
            android:layout_width="367dp"
            android:layout_height="47dp"
            android:id="@+id/search_view"
            android:layout_alignBottom="@+id/search_tab"
            android:layout_toRightOf="@+id/search_tab"
            android:tag="binding_1"        
            />

        <Spinner
            android:id="@+id/search_tab"
            android:layout_width="99dp"
            android:layout_height="49dp"
            android:entries="@array/menu"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_view"
            android:tag="binding_2"    
            android:textFilterEnabled="true"/>

    </RelativeLayout>

         